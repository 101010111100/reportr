{
    "manifest_version": 2,

    "name": "Reportr Tracker",
    "description": "This extension demonstrates how to track browser navigation with Reportr.",
    "version": "1.0",
    "content_security_policy": "script-src 'self' 'unsafe-eval' http://localhost:5000; object-src 'self'",

    "permissions": [
        "history", "storage"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "src/popup.html"
    },
    "background": {
        "page": "src/background.html",
        "persistent": true
    }
}